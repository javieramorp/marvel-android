<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.characterdetail.CharacterDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/logo_marvel"
            android:layout_weight="50"
            android:id="@+id/iv_character"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:contentDescription="@string/character_detail_image"
            android:layout_height="0dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_margin="@dimen/margin_16"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/text_22"
                    android:id="@+id/tv_name"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="@dimen/text_20"
                    android:layout_marginTop="@dimen/margin_16"
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <ImageView
        android:foreground="?android:selectableItemBackground"
        android:background="@color/red"
        android:id="@+id/iv_character_not_available"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="@string/common_retry_action"
        android:paddingHorizontal="@dimen/margin_32"
        android:src="@drawable/logo_boom"
        android:visibility="invisible"
        tools:alpha="0.1"
        tools:visibility="visible" />

</RelativeLayout>